# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/jwt-auth

# JWT Access Token
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m

# JWT Refresh Token
JWT_REFRESH_EXPIRY_DAYS=7

# Multi-Device Support (true = allow multiple sessions, false = single device only)
ALLOW_MULTI_DEVICE=true

# Security (Optional - for Argon2 pepper)
PASSWORD_PEPPER=your-optional-pepper-key-for-extra-security
