# Server
PORT=3002
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/oauth-social-login

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY_DAYS=7

# Password hashing pepper — local auth only
PASSWORD_PEPPER=your-pepper-change-this-in-production

# Google OAuth
# Get from: https://console.cloud.google.com → APIs & Services → Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/api/auth/google/callback

# Facebook OAuth
# Get from: https://developers.facebook.com → My Apps → Settings → Basic
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:3002/api/auth/facebook/callback

# OAuth Provider — when WE are the provider
# Generate: openssl rand -base64 32
OAUTH_PROVIDER_SECRET=your-oauth-provider-secret-change-this-in-production
OAUTH_PROVIDER_ACCESS_EXPIRY=1h

# Frontend URL — ticket redirects here after OAuth callback
CLIENT_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173

# Multi-device support
ALLOW_MULTI_DEVICE=true
