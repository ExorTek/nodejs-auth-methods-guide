# Server
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/enterprise-sso

# JWT — local session tokens
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY_DAYS=7

# Password hashing pepper — local auth only
PASSWORD_PEPPER=your-pepper-change-this-in-production

# Frontend URL — redirect after SSO callback
CLIENT_URL=http://localhost:3000/validate
CORS_ORIGINS=http://localhost:5173

# Multi-device support
ALLOW_MULTI_DEVICE=true
